
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.css">
</head>
<body>
    <div class="container">
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-8">
                <form>
                    <div class="form-group row">
                        <label for="userInput" class="col-sm-2 col-form-label">User:</label>
                        <input type="text" id="userInput" class="col-sm-6 form-control" />
                    </div>
                    <div class="form-group row">
                        <label for="messageInput" class="col-sm-2 col-form-label">Message:</label>
                        <input type="text" id="messageInput" class="col-sm-6 form-control" />
                        <input type="submit" id="sendButton" class="btn btn-sm btn-primary ml-2" value="Send Message" />
                    </div>
                </form>
            </div>
            <div class="col-4">&nbsp;</div>
        </div>
        <div class="row">
            <div class="col-12">
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col-8">
                <h2>Messages</h2>
                <ul class="list-group" id="messagesList"></ul>
            </div>
            <div class="col-4">&nbsp;</div>
        </div>
    </div>

    <script src="~/lib/signalr/dist/browser/signalr.js"></script>
    <script src="lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/chat.js"></script>
</body>
</html>
